@model Chef

<div class="container" style="margin-bottom: 50px;">
  <div class="row">
    <div class="col text-center">
        <h2>Add a Chef!</h2>
    </div>
  </div>
</div>

<div class="container" style="margin-bottom: 50px;">
  <div class="row">
    <div class="col">
        <a href="/">Home</a>
    </div>
  </div>
</div>

<form asp-action="AddingChef" asp-controller="Home" method="post">
    <div class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName"></label>
                    <input class="form-control" asp-for="FirstName">
                </div>
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
                    <label asp-for="LastName"></label>
                    <input class="form-control" asp-for="LastName">
                </div>
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="DOB"></span>
                    <label asp-for="DOB"></label>
                    <input class="form-control" type="date" asp-for="DOB">
                </div>
                <button>Add Chef</button>
            </div>
        </div>
    </div>
</form>