@model Dish

<div class="container" style="margin-bottom: 50px;">
  <div class="row">
    <div class="col text-center">
        <h2>Add a Dish!</h2>
    </div>
  </div>
</div>

<div class="container" style="margin-bottom: 50px;">
  <div class="row">
    <div class="col">
        <a href="/dishes">Home</a>
    </div>
  </div>
</div>

<form asp-action="AddingDish" asp-controller="Home" method="post">
    <div class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="Name"></span>
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="Calories"></span>
                    <label asp-for="Calories"></label>
                    <input class="form-control" asp-for="Calories">
                </div>
                <div class="form-group">
                    <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
                    <label asp-for="Description"></label>
                    <input class="form-control" asp-for="Description">
                </div>
                <select asp-for="ChefId">
                <span class="text-danger font-weight-bold" asp-validation-for="ChefId"></span>
                <label asp-for="ChefId">Chef</label>
                @foreach (var chef in ViewBag.allChefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
                </select>
                <div class="form-group">
                <span class="text-danger font-weight-bold" asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness"></label>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>


                <button>Add Dish</button>
            </div>
        </div>
    </div>
</form>